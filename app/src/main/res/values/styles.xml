<resources>

    <!-- Theme colors -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
    </style>

    <!-- ToolBar Style -->
    <style name="AppTheme.ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue_300</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- ToolBar EditText Style -->
    <style name="AppTheme.ToolBarEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <!-- RecyclerView Style -->
    <style name="AppTheme.RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue_50</item>
        <item name="android:paddingTop">?android:attr/actionBarSize</item>
        <item name="android:padding">@dimen/spacing_xsmall</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- This texViewHeader style was defined by Fernando Cejas github.com/android10 -->
    <!-- TextViewHeader ActorDetailActivity -->
    <style name="AppTheme.TextViewHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/header_margin</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/header_padding_bottom</item>
        <item name="android:paddingTop">@dimen/header_padding_top</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@color/blue_900</item>
    </style>

    <!-- TextViewTitles ActorDetailActivity (Birthday, name etc...) -->
    <style name="AppTheme.TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_900</item>
    </style>

</resources>
